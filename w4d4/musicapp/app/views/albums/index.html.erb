<h1> All Albums </h1>
  <% unless @albums.nil? %>
    <table>
      <tr>
        <th>Artist</th>
        <th>Title</th>
        <th>Type</th>
      </tr>
      <% @albums.each do |album| %>
        <tr>
          <td><%= link_to album.band.name, band_url(album.band) %></td>
          <td><%= link_to album.title, album_url(album) %></td>
          <td><%= album.style %></td>
          <td><%= link_to 'Edit', edit_album_url(album)%></td>
        </tr>
      <% end %>
    </table>
  <% end %>
<%= link_to 'Back to Bands', bands_url %>

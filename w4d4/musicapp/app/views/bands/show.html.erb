<h1><%= @band.name %></h1>
<br>
<% unless @band.albums.nil? %>
  <div>Albums</div>
  <table>
    <tr>
    <th>Title</th>
    <th>Style</th>
    </tr>
    <% @band.albums.each do |album| %>
      <tr>
      <td><%= link_to album.title, album_url(album)  %></td>
      <td><%= album.style %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<br>
<% unless @band.tracks.nil? %>
  <div>Tracks</div>
  <table>
    <tr>
    <th>Title</th>
    <th>Distribution</th>
    <th>Album</th>
    <tr>
    <% @band.tracks.each do |track| %>
    <tr>
      <td><%= link_to track.name,  track_url(track) %></td>
      <td><%= track.distrib %></td>
      <td><%= track.album.title %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<%= link_to 'Create album', new_band_albums_url(@band) %>
<%= link_to 'All Bands', bands_url %>

